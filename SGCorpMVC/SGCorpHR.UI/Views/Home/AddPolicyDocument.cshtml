@using System.Web.UI.WebControls
@model SGCorpHR.UI.Models.UploadPolicyVM
@{
    ViewBag.Title = "AddPolicyDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("AddPolicyDocument", "Home", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <h1>Upload Policy Document</h1>
    <span style="color:red">@Html.ValidationSummary()</span>
        
    <div class="form-group">
        <label>File:</label>

        <input type="file" name="file"/>

    </div>
    <div>
        <label>Category: </label>
        @Html.DropDownListFor(m => m.SelectedCategory, Model.Categories, new { @class = "form-control" })
    </div>


    <div class="form-group"><label>Category</label> 
    <input type="text" name="Category2" id="Category2"/></div>
    <div class="form-group">
    <label>Name</label> 
    <input type="text" name="Name" id="Name"/>
    </div>

    <button class="btn btn-primary">Submit</button>


}